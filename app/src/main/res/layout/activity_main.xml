<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:id="@+id/main"
    tools:context=".Activity.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아래 버튼을 눌러 음성 녹음을 시작하세요."
        android:textAlignment="center"
        android:textSize="30sp"
        android:id="@+id/main_tv_status"
        app:layout_constraintBottom_toTopOf="@id/main_btn_record"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:id="@+id/main_btn_record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_tv_status"
        app:icon="@drawable/ic_mic"
        app:iconSize="48dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        android:padding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Button.Circle"
        style="@style/Widget.MaterialComponents.Button.Icon" />

</androidx.constraintlayout.widget.ConstraintLayout>